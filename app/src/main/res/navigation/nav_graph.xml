<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainBlankFragment">
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.polyschedule.presentation.ScheduleFragment"
        android:label="ScheduleFragment" >
        <argument
            android:name="universityEntity"
            app:argType="com.example.polyschedule.domain.entity.UniversityEntity" />
    </fragment>
    <fragment
        android:id="@+id/InstituteSettingFragment"
        android:name="com.example.polyschedule.presentation.InstituteSettingFragment"
        android:label="InstituteSettingFragment" >
        <action
            android:id="@+id/action_InstituteSettingFragment_to_groupSetting"
            app:destination="@id/groupSetting"
            app:launchSingleTop="false"
            app:popUpTo="@id/InstituteSettingFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/mainBlankFragment"
        android:name="com.example.polyschedule.presentation.MainBlankFragment"
        android:label="fragment_main_blank"
        tools:layout="@layout/fragment_main_blank" >
        <action
            android:id="@+id/action_mainBlankFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
        <action
            android:id="@+id/action_mainBlankFragment_to_InstituteSettingFragment"
            app:destination="@id/InstituteSettingFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupSetting"
        android:name="com.example.polyschedule.presentation.GroupSettingFragment"
        android:label="fragment_group_setting"
        tools:layout="@layout/fragment_group_setting" >
        <argument
            android:name="course"
            app:argType="com.example.polyschedule.domain.entity.Course" />
        <argument
            android:name="institute"
            app:argType="com.example.polyschedule.domain.entity.Institute" />
        <action
            android:id="@+id/action_groupSetting_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
</navigation>