<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/default_horizontal_margin"
    tools:context=".presentation.schedule.lessoncard.LessonCardActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/arrow_back_black" />

        <TextView
            android:id="@+id/subject"
            android:maxLines="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:id="@+id/teacher_layout"
        style="@style/LightGreenButtonCardView">
        <TextView
            android:id="@+id/teacher"
            style="@style/LightGreenTextInCardView"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        style="@style/LightGreenButtonCardView">
        <TextView
            android:id="@+id/auditory"
            style="@style/LightGreenTextInCardView"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        style="@style/GreenButtonCardView">
        <TextView
            android:id="@+id/open_task"
            android:text="@string/open_task"
            style="@style/GreenTextInCardView"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        style="@style/GreenButtonCardView">
        <TextView
            android:id="@+id/create_task"
            android:text="@string/create_task"
            style="@style/GreenTextInCardView"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>