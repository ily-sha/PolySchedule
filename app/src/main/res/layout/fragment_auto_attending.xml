<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/horizontal_margin_schedule_setting"
    tools:context=".AutoAttendingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/classic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/auto_attending"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:text="@string/i_am_going_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
        android:layout_width="match_parent"
        app:radius="16dp"
        android:layout_height="wrap_content">
        <com.addisonelliott.segmentedbutton.SegmentedButton
            app:text="17:00"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <com.addisonelliott.segmentedbutton.SegmentedButton
            app:text="18:00"
            android:layout_weight="1"
            app:selectedBackground="@drawable/selected_right_segmented_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>




</LinearLayout>