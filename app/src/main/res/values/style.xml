<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@font/inter_bold</item>
    </style>

    <style name="SelectedTab" parent="TabStyle">
        <item name="android:color">@color/dark_gray</item>
    </style>

    <style name="UnSelectedTab" parent="TabStyle">
        <item name="android:color">@color/white</item>
    </style>


    <style name="ScheduleSettingCardView">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ScheduleSettingCardViewDisabled" parent="ScheduleSettingCardView">
        <item name="strokeColor">@color/light_gray</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="ScheduleSettingCardViewFirstDisabled" parent="ScheduleSettingCardViewDisabled">
        <item name="android:layout_marginStart">24dp</item>

    </style>




    <style name="ScheduleSettingCardViewEnabled" parent="ScheduleSettingCardView">
        <item name="android:backgroundTint">@color/primary</item>
    </style>


    <style name="ScheduleSettingCardViewFirstEnabled" parent="ScheduleSettingCardViewEnabled">
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="ScheduleSettingItemText">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>


    <style name="ScheduleSettingItemTextDisabled" parent="ScheduleSettingItemText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScheduleSettingItemTextEnabled" parent="ScheduleSettingItemText">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>