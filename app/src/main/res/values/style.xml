<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WeekdaysTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="font">@font/inter_bold</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="font">@font/inter_bold</item>
    </style>

    <style name="ButtonCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">0dp</item>

    </style>

    <style name="EditTextCardView" parent="ButtonCardView">
        <item name="strokeColor">@color/stroke</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="GreenButtonCardView" parent="ButtonCardView">
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <style name="LightGreenButtonCardView" parent="ButtonCardView">
        <item name="android:backgroundTint">@color/on_primary</item>
    </style>

    <style name="EditText2">
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/hint</item>
        <item name="android:textColor">@color/black</item>


        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColorHint">@color/hint</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
<!--        <item name="android:background">@null</item>-->

    </style>

    <style name="HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="hintTextAppearance">@style/HintAppearance</item>
        <item name="boxBackgroundColor">@color/on_primary</item>
        <item name="hintTextColor">@color/dark_gray</item>
        <item name="boxStrokeColor">@color/additional</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <style name="EditText">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColorHint">@color/stroke</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

    </style>


    <style name="TextInCardView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GreenTextInCardView" parent="TextInCardView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LightGreenTextInCardView" parent="TextInCardView">
        <item name="android:textColor">@color/primary</item>
    </style>


    <style name="SelectedTab" parent="WeekdaysTabStyle">
        <item name="android:color">@color/dark_gray</item>
    </style>

    <style name="UnSelectedTab" parent="WeekdaysTabStyle">
        <item name="android:color">@color/white</item>
    </style>


    <style name="ScheduleSettingCardView">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">22dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ScheduleSettingCardViewDisabled" parent="ScheduleSettingCardView">
        <item name="strokeColor">@color/stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="ScheduleSettingCardViewFirstDisabled" parent="ScheduleSettingCardViewDisabled">
        <item name="android:layout_marginStart">24dp</item>

    </style>


    <style name="ScheduleSettingCardViewEnabled" parent="ScheduleSettingCardView">
        <item name="android:backgroundTint">@color/primary</item>
    </style>


    <style name="ScheduleSettingCardViewFirstEnabled" parent="ScheduleSettingCardViewEnabled">
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="ScheduleSettingItemText">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>


    <style name="ScheduleSettingItemTextDisabled" parent="ScheduleSettingItemText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScheduleSettingItemTextEnabled" parent="ScheduleSettingItemText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
</resources>